<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="512.0" prefWidth="640.0">
      <children>
         <DialogPane layoutX="70.0" layoutY="38.0" prefHeight="500.0" prefWidth="500.0">
            <header>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <VBox alignment="CENTER" prefHeight="100.0" prefWidth="505.0">
                        <children>
                           <Label fx:id="createNewTaskHeader" text="create new task">
                              <font>
                                 <Font size="44.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>
                  </children>
               </HBox>
            </header>
         </DialogPane>
         <VBox layoutX="70.0" layoutY="132.0" prefHeight="337.0" prefWidth="500.0">
            <children>
               <HBox prefHeight="65.0" prefWidth="373.0">
                  <children>
                     <HBox prefHeight="26.0" prefWidth="88.0">
                        <children>
                           <Label fx:id="taskName" text="name: " />
                        </children>
                     </HBox>
                     <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="129.0">
                        <children>
                           <TextField fx:id="userTaskName" />
                        </children>
                     </HBox>
                  </children>
               </HBox>
               <HBox layoutX="21.0" layoutY="21.0" prefHeight="65.0" prefWidth="373.0">
                  <children>
                     <HBox prefHeight="65.0" prefWidth="105.0">
                        <children>
                           <Label fx:id="taskDay" text="day of week: " />
                        </children>
                     </HBox>
                     <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="129.0">
                        <children>
                           <TextField fx:id="userTaskDay" />
                        </children>
                     </HBox>
                  </children>
               </HBox>
               <HBox layoutX="21.0" layoutY="86.0" prefHeight="65.0" prefWidth="373.0">
                  <children>
                     <HBox prefHeight="65.0" prefWidth="105.0">
                        <children>
                           <Label fx:id="taskDescription" text="description: " />
                        </children>
                     </HBox>
                     <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="129.0">
                        <children>
                           <TextField fx:id="userDescription" />
                        </children>
                     </HBox>
                  </children>
               </HBox>
               <HBox alignment="CENTER_RIGHT" layoutX="21.0" layoutY="151.0" prefHeight="65.0" prefWidth="428.0">
                  <children>
                     <Button fx:id="newTaskDone" alignment="BOTTOM_RIGHT" contentDisplay="BOTTOM" mnemonicParsing="false" text="done" />
                  </children>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
